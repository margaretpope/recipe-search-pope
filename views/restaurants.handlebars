{{!display inputs from restaurant form/database}}
{{> header}}
{{!input favorite restaurants}}
<main>
    <h1>Log your favorite restaurants here:</h1>
    <form action="/api/restaurants" method="POST">
        <label for="restaurant">Restaurant:</label>
        <input type="text" name="restaurant" id="restaurant" required/>
        <label for="city">City:</label>
        <input type="text" name="city" id="city" required/>
        <label for="state">State:</label>
        <input type="text" name="state" id="state" required/>
        <label for="occassion">Occassion:</label>
        <input type="text" name="occasion" id="occasion" required/>
        <button type="submit">Submit</button>
    </form>
    <h2>Favorite Restaurants</h2>
        {{#each favorite_restaurant}}
            <h2>{{restaurant_name}}</h2>
            <p>{{city}}, {{state}}</p>
            <p>{{occasion}}</p>
        {{/each}}
    </ul>
</main>
<footer class="footer">
    <p>&copy; Pope 2024</p>
</footer>
